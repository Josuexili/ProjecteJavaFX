<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.projecteprogramacio.controller.SaleController"
      spacing="10">
      
      <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Taula de Vendes -->
    <TableView fx:id="saleTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colSaleId" text="Sale ID" prefWidth="80"/>
            <TableColumn fx:id="colTicketId" text="Ticket ID" prefWidth="80"/>
            <TableColumn fx:id="colTotalAmount" text="Total Amount" prefWidth="120"/>
            <TableColumn fx:id="colCreatedAt" text="Created At" prefWidth="150"/>
            <TableColumn fx:id="colCumulativeTotal" text="Cumulative Total" prefWidth="130"/>
        </columns>
    </TableView>

    <!-- Formulari de dades de venda -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="100"/>
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Ticket ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="ticketIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Total Amount:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="totalAmountField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Created At:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="createdAtField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Cumulative Total:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="cumulativeTotalField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Botons per a operacions -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="addButton" text="Add" onAction="#handleAddSale" />
        <Button fx:id="updateButton" text="Update" onAction="#handleUpdateSale" />
        <Button fx:id="deleteButton" text="Delete" onAction="#handleDeleteSale" />
    </HBox>

    <!-- Label d'estat -->
    <Label fx:id="statusLabel" text="Estat..." />

</VBox>


