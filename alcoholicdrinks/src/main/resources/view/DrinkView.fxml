<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.projecteprogramacio.controller.DrinkController"
      spacing="10">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Taula -->
    <TableView fx:id="drinkTable" prefHeight="300" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
            <TableColumn fx:id="colAlcohol" text="Alcohol %" prefWidth="100"/>
            <TableColumn fx:id="colPrice" text="Price (€)" prefWidth="100"/>
            <TableColumn fx:id="colDescription" text="Description" prefWidth="200"/>
            <TableColumn fx:id="colVolume" text="Volume (ml)" prefWidth="100"/>
            <TableColumn fx:id="colTypeId" text="Type ID" prefWidth="80"/>
            <TableColumn fx:id="colBrandId" text="Brand ID" prefWidth="80"/>
            <TableColumn fx:id="colCountry" text="Country" prefWidth="80"/>
        </columns>
    </TableView>

    <!-- Formulari -->
    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Alcohol %:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="alcoholField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Price (€):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Description:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="descriptionField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Volume (ml):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="volumeField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Type ID:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="typeField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Brand ID:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="brandField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="Country:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <TextField fx:id="countryField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Botons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Afegir" fx:id="addButton" onAction="#handleAddDrink"/>
        <Button text="Actualitzar" fx:id="updateButton" onAction="#handleUpdateDrink"/>
        <Button text="Esborrar" fx:id="deleteButton" onAction="#handleDeleteDrink"/>
    </HBox>

    <!-- Missatge d'estat -->
    <Label fx:id="statusLabel" style="-fx-text-fill: red;"/>

</VBox>
